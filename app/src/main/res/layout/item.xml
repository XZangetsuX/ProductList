<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtStockitem"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNameitem"
        android:layout_marginTop="62dp"
        android:text="Stock"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtNameitem"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Name's product"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtPercentitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtStockitem"
        android:layout_marginEnd="38dp"
        android:text="Percent"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtStockitem"
        android:layout_marginStart="-38dp"
        android:layout_toEndOf="@+id/txtPercentitem"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtStatusitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtStockitem"
        android:layout_marginEnd="128dp"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>
